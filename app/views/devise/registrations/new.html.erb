<div class="d-flex flex-column justify-content-center align-items-center text-light">
  <h2 class='text-light'>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field text-light d-flex  flex-column align-items-left ">
      <%= f.label :email, class: 'my-0 py-0' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class='field text-light d-flex  flex-column align-items-left'>
      <%= f.label :name, class: 'my-0 py-0' %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field text-light d-flex  flex-column align-items-left">
      <%= f.label :password, class: 'my-0 py-0' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> znak√≥w minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field text-light d-flex  flex-column align-items-left">
      <%= f.label :password_confirmation, class: 'my-0 py-0' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="d-flex justify-content-center my-2">
      <button type="submit" class="btn btn-outline-success">Zaloguj</button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
